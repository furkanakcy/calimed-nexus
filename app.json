{
  "name": "CaliMed Nexus",
  "description": "Medical Device Calibration Management System",
  "repository": "https://github.com/yourusername/calimed-nexus",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "prisma", "postgresql"],
  "image": "heroku/nodejs",
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "JWT Secret Key",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}